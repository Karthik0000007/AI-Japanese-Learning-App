# ─── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/jlpt_trainer

# ─── Ollama ────────────────────────────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:70b

# ─── Piper TTS ─────────────────────────────────────────────────────────────────
# Path to the compiled piper binary (must be on PATH or absolute)
PIPER_BINARY=piper
# Path to the .onnx voice model file
PIPER_MODEL_PATH=static/piper/ja_JP-kokoro-medium.onnx

# ─── SRS defaults (overridable via /api/settings) ──────────────────────────────
NEW_CARDS_PER_DAY=20

# ─── App ───────────────────────────────────────────────────────────────────────
APP_HOST=127.0.0.1
APP_PORT=8000
LOG_LEVEL=INFO
